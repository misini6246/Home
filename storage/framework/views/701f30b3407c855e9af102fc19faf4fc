                    <?php endif; ?>
                    <?php if($pages->currentPage()>1): ?>
                        <span class="p1"><a href="<?php echo e(pageParams($pages->currentPage()-1,$params)); ?>">上一页</a></span>
                    <?php endif; ?>
                    <?php if($pages->currentPage()>$pages->lastPage()-3): ?>
                        <?php for($i=$pages->currentPage()-4-($pages->currentPage()-$pages->lastPage()+3);$i<$pages->currentPage();$i++): ?>
                            <?php if($i>0): ?>
                                <span class="p1"><a href="<?php echo e(pageParams($i,$params)); ?>"><?php echo e($i); ?></a></span>
                            <?php endif; ?>
                        <?php endfor; ?>
                    <?php else: ?>
                        <?php for($i=$pages->currentPage()-4;$i<$pages->currentPage();$i++): ?>
                            <?php if($i>0): ?>
                                <span class="p1"><a href="<?php echo e(pageParams($i,$params)); ?>"><?php echo e($i); ?></a></span>
                            <?php endif; ?>
                        <?php endfor; ?>
                    <?php endif; ?>
                    <span class="p1 p_ok"><?php echo e($pages->currentPage()); ?></span>
                    <?php if($pages->currentPage()<5): ?>
                        <?php for($i=$pages->currentPage()+1;$i<$pages->currentPage()+4+5-$pages->currentPage();$i++): ?>
                            <?php if($i<=$pages->lastPage()): ?>
                                <span class="p1"><a href="<?php echo e(pageParams($i,$params)); ?>"><?php echo e($i); ?></a></span>
                            <?php endif; ?>
                        <?php endfor; ?>
                    <?php else: ?>
                        <?php for($i=$pages->currentPage()+1;$i<$pages->currentPage()+4;$i++): ?>
                            <?php if($i<=$pages->lastPage()): ?>
                                <span class="p1"><a href="<?php echo e(pageParams($i,$params)); ?>"><?php echo e($i); ?></a></span>
                            <?php endif; ?>
                        <?php endfor; ?>
                    <?php endif; ?>
                    <?php if($pages->currentPage()<$pages->lastPage()): ?>
                        <span class="p1"><a href="<?php echo e(pageParams($pages->currentPage()+1,$params)); ?>">下一页</a></span>
                    <?php endif; ?>
                    <?php if($pages->currentPage()+3<$pages->lastPage()): ?>
                        <span class="p1"><a href="<?php echo e(pageParams($pages->lastPage(),$params)); ?>">最末页</a></span>
                    <?php endif; ?>
                <?php endif; ?>
