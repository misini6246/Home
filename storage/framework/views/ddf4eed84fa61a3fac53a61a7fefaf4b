<?php if(count($result)>0): ?>
    <form id="search_form" name="search_form"
          action="<?php echo e(route('member.money',['type'=>$type])); ?>">
    </form>
    <table style="margin-bottom: 20px;">
        <tr>
            <th class="czsj">操作时间</th>
            <th class="lx">类型</th>
            <th class="je">金额</th>
            <th class="jy">当前余额</th>
            <th class="bz">备注</th>
        </tr>
        <?php foreach($result as $v): ?>
            <tr>
                <td class="czsj"><?php echo e(date('Y-m-d',$v->change_time)); ?></td>
                <td class="lx"><?php if($v->money<0): ?>减少<?php else: ?>增加<?php endif; ?></td>
                <td class="je"><?php echo e(formated_price(abs($v->money))); ?></td>
                <td class="jy"><?php echo e(formated_price($v->now_money)); ?></td>
                <td>
                    <div class="bz">
                        <?php echo e($v->change_desc); ?>

                    </div>
                </td>
            </tr>
        <?php endforeach; ?>
    </table>
    <?php echo $__env->make('user.pages',['pages'=>$result], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
<?php else: ?>
    <?php echo $__env->make('user.empty',['type'=>4], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
<?php endif; ?>
<script>
    $('.page a').click(function () {
        var url = $(this).attr('href');
        get_data(url);
        return false;
    });
    $('#search_form').submit(function () {
        var url = $(this).attr('action');
        var page = $('input[name=page]').val();
        url = url + '&page=' + page;
        get_data(url);
        return false;
    });
</script>