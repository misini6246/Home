        $('.layer_tips').hover(function () {
            var msg = $(this).data('msg');
            var id = $(this).attr('id');
            layer.tips(msg, '#' + id, {
                tips: [3, '#fff'],
                time: 0,
                id: 'layer_tips'
            });
        }, function () {
            layer.closeAll();
        });

        function last_page(url, lastPage) {
            var currentPage = $('#currentPage').val();
            if (parseInt(currentPage) > parseInt(lastPage)) {
                alert('你要访问的页码不存在!');
                $('#currentPage').val(lastPage);
                return false;
            }
        }
