<script type="text/javascript">
    function kfdh() {
        $.ajax({
            url: '/kfdh',
            type: 'get',
            data: {id: 1},
            dataType: 'json',
            success: function () {
                $('#yindaokf').remove();
                $('.close_server').remove();
                $('#kffw').show();
            }
        });
    }
</script>