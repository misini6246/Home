<script type="text/javascript" src="<?php echo e(path('/js/jquery.min.js')); ?>"></script>
<script type="text/javascript" src="<?php echo e(path('layer/layer.js')); ?>"></script>
<script>
    function yzmm() {
        var mm = $('input[name=password]').val();
        var is_mm = /^[a-zA-Z\d_]{6,24}$/;
        if (!is_mm.test(mm)) {
            layer.msg('密码只能包含大小写数字及下划线,最短六位', {icon: 2});
            return false;
        }
        var c_mm = $('input[name=password_confirmation]').val();
        if (c_mm != mm) {
            layer.msg('两次输入密码不一致', {icon: 2});
            return false;
        }
        return true;
    }
</script>
