        if (next_tip != '') {
            layer.alert('<span style="color: red;">' + next_tip + '</span>', {
                btn: ['返回购物车', '关闭'], //按钮
                icon: 0
            }, function (index) {
                location.href = '/cart';
            }, function () {
                layer.close(index);
            });
        }
    </script>
<?php $__env->stopSection(); ?>


<?php echo $__env->make('layout.body', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>