        $('.neirong').hover(function () {
            var msg = $(this).data('msg');
            var id = $(this).data('id');
            layer.tips(msg, '#hf' + id, {
                tips: [4, '#3dbb2b'],
                time: 0
            });
        }, function () {
            layer.closeAll()
