    <script>
        $(function () {
            getZy();
            $('.mzxx').hover(function () {
                $(this).find('.info_box').css('display', 'block');
            }, function () {
                $(this).find('.info_box').css('display', 'none');
            });
        });

        function getZy() {
            $.ajax({
                url: '/xin/miaosha/get_zy',
                type: 'get',
                dataType: 'html',
                success: function (data) {
                    $('#miaosha-box').html(data);
                }
            })
        }
    </script>
