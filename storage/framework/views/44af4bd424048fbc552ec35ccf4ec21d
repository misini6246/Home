<script>
    var djs_time = 0;
    $('.djs').each(function (index) {
        var this_djs_time = parseInt($(this).data('djs'));
        if (index == 0) {
            djs_time = this_djs_time;
        } else {
            if (this_djs_time < djs_time) {
                djs_time = this_djs_time;
            }
        }
    });
    var djs_fun = setInterval('djs()', 1000);

    function djs() {
        if (djs_time == 0) {
            clearInterval(djs_fun);
            getMrms();
        }
        djs_time--;
    }
</script>